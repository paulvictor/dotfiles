{config, pkgs, lib,...}:

with pkgs;
{
  programs.autorandr = {
    enable = true;
    hooks.postswitch = {
      change-background = "${feh}/bin/feh --bg-scale ${wall1} ${wall2} ${wall3}";
    };
    profiles = {
        "two-monitor" = {
          fingerprint = {
            HDMI1 = "";
            DP1 = "";
          };
          config = {
            HDMI2.enable = false;
            HDMI1 = {
              enable = true;
              crtc = 1;
              primary = false;
              position = "0x0";
              mode = "2560x1440";
              rate = "59.95";
              rotate = "left";
            };
            DP1 = {
              enable = true;
              crtc = 0;
              primary = true;
              position = "1440x486";
              mode = "2560x1440";
              rate = "59.95";
            };
          };
        };
      };
  };
}
